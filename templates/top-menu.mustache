{{!
    @template enrol_poodllprovider/top-menu
}}
<section id="top-menu" class="sections">
    <h1 class="p-2">What do you want to add?</h1>
    <div class="row justify-content-center">
        {{#availablemods}}
            <div aria-label="{{pluginname}}" class="col-sm-3 border-1 card m-1 bg-white">
                <div class="card-body d-flex flex-column text-center px-1 py-4" data-region="chooser-option-info-container">
                    <a class="d-flex flex-column justify-content-between flex-fill" title="{{title}}"
                       data-action="collapse"
                       data-module="{{modname}}">

                        <div class="optionicon mt-2 mb-1 icon-size-5 icon-no-margin">
                            <img class="icon icon" alt="" aria-hidden="true" src="{{icon}}">
                        </div>
                        <div class="optionname clamp-2">{{pluginname}}</div>
                    </a>
                </div>
            </div>
        {{/availablemods}}
    </div>
</section>

