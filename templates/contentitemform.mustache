<form method="post" action="{{content_item_return_url}}" encType="application/x-www-form-urlencoded" id="poodllprovider_item_{{itemnumber}}" data-toolid="{{itemnumber}}">
    <input type="hidden" name="content_items" value='{{{content_items}}}'/>
    {{#data}}
        <input type="hidden" name="data" value="{{ data }}"/>
    {{/data}}
    <input type="hidden" name="oauth_nonce" value="{{oauth_nonce}}" />
    <input type="hidden" name="oauth_version" value="1.0" />
    <input type="hidden" name="oauth_timestamp" value="{{oauth_timestamp}}" />
    <input type="hidden" name="oauth_callback" value="{{oauth_callback}}" />
    <input type="hidden" name="oauth_consumer_key" value="{{oauth_consumer_key}}" />
    <input type="hidden" name="lti_version" value="{{lti_version}}"/>
    <input type="hidden" name="lti_message_type" value="{{lti_message_type}}"/>
    <input type="hidden" name="oauth_signature_method" value="HMAC-SHA1" />
    <input type="hidden" name="oauth_signature" value="{{oauth_signature}}" />
</form>
<div class="row activity" data-toolid="{{itemnumber}}">
    <div class="offset-sm-2 col-sm-4 p-2 activity-name">
        <img class="icon icon" alt="" aria-hidden="true" src="{{icon}}">{{name}}
    </div>
    <div class="col-sm-2 p-2 activity-action">
        <a class="menu-action" title="{{#str}}select{{/str}}" data-action="activity-select" data-itemnumber="{{itemnumber}}">
            <i class="icon fa fa-plus" aria-hidden="true"></i>
        </a>
        {{#teachercanmanage}}
            <a class="menu-action" title="{{#str}}edit{{/str}}" data-action="activity-edit" data-module="{{modname}}" data-contextid="{{contextid}}" data-itemnumber="{{itemnumber}}" data-cmid="{{cmid}}">
                <i class="icon fa fa-cog" aria-hidden="true"></i>
            </a>
            <a class="menu-action" title="{{#str}}delete{{/str}}" data-action="activity-delete" data-module="{{modname}}" data-contextid="{{contextid}}" data-itemnumber="{{itemnumber}}" data-cmid="{{cmid}}">
                <i class="icon fa fa-trash" aria-hidden="true"></i>
            </a>
        {{/teachercanmanage}}
    </div>
</div>


